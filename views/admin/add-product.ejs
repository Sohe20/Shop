<%- include('../includes/head.ejs') %> <%- include('../includes/heading.ejs') %>
<%- include('../includes/navigation.ejs') %>

<main>
  <div class="container">
    <form
    action="/admin/<%= editing ? 'edit-product' : 'add-product' %>"
    method="post"
  >
    <% if(editing) { %>
      <input type="hidden" name="productId" value="<%= product._id %>">
    <% } %>
  
    <div class="form-group">
      <label for="title">عنوان </label>
      <input
        type="text"
        class="form-control"
        id="title"
        name="title"
        placeholder="نام محصول را وارد کنید"
        value="<%= editing ? product.title : '' %>"
      />
    </div>
  
    <div class="form-group">
      <label for="price">قیمت</label>
      <input
        type="number"
        class="form-control"
        id="price"
        name="price"
        placeholder="قیمت محصول را وارد کنید"
        value="<%= editing ? product.price : '' %>"
      />
    </div>
  
    <div class="form-group">
      <label for="imageUrl">آدرس عکس</label>
      <input
        type="text"
        class="form-control"
        id="imageUrl"
        name="imageUrl"
        placeholder="عکس محصول را وارد کنید"
        value="<%= editing ? product.imageUrl : '' %>"
      />
    </div>
  
    <div class="form-group">
      <label for="discription">توضیحات</label>
      <textarea
        class="form-control"
        name="discription"
        id="discription"
        cols="30"
        rows="10"
      ><%= editing ? product.discription : '' %></textarea>
    </div>
  
    <button type="submit" class="btn btn-primary">
      <%= editing ? 'ویرایش محصول' : 'افزودن محصول' %>
    </button>
  </form>
  
  </div>
</main>

<%- include('../includes/end.ejs') %>
